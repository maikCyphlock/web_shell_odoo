<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web_shell.ModelGraph" owl="1">
        <div class="ws-model-graph h-100 d-flex flex-column bg-white">
            
            <!-- Header / Search -->
            <div class="p-2 border-bottom bg-light d-flex align-items-center justify-content-between">
                <div class="d-flex align-items-center flex-grow-1">
                    <button t-if="state.activeModel or state.history.length > 0" 
                            class="btn btn-sm btn-outline-secondary me-2" 
                            t-on-click="goBack">
                        <i class="fa fa-arrow-left"></i>
                    </button>
                    
                    <div class="input-group input-group-sm" style="max-width: 300px;">
                        <span class="input-group-text bg-white border-end-0"><i class="fa fa-search text-muted"></i></span>
                        <input type="text" 
                               class="form-control border-start-0" 
                               placeholder="Search model (e.g. res.partner)..." 
                               t-model="state.searchQuery" 
                               t-ref="searchInput"
                               t-on-keydown="onSearchKeydown"/>
                    </div>
                </div>
                <div t-if="state.activeModel" class="text-end ms-2 d-flex align-items-center gap-2">
                    <span class="badge bg-secondary"><t t-esc="state.activeModel.total_fields"/> fields</span>
                    <span class="badge bg-primary"><t t-esc="state.activeModel.model"/></span>
                </div>
            </div>

            <!-- Content Area -->
            <div class="flex-grow-1 overflow-auto position-relative">
                <div t-if="state.loading" class="text-center mt-5">
                    <i class="fa fa-spinner fa-spin fa-2x text-primary mb-2"></i>
                </div>

                <!-- Search Results Overlay -->
                <div t-if="state.searchResults.length > 0" class="ws-search-results list-group shadow position-absolute w-100" style="max-height: 300px; overflow-y: auto; z-index: 10;">
                    <t t-foreach="state.searchResults" t-as="res" t-key="res.id">
                        <button class="list-group-item list-group-item-action d-flex justify-content-between small"
                                t-on-click="() => this.selectModel(res.model)">
                            <span class="fw-bold"><t t-esc="res.model"/></span>
                            <span class="text-muted"><t t-esc="res.name"/></span>
                        </button>
                    </t>
                </div>

                <div t-if="state.error" class="alert alert-danger m-3">
                    <t t-esc="state.error"/>
                </div>

                <!-- Model Explorer View -->
                <div t-if="state.activeModel" class="p-3">
                    <h5 class="mb-3">
                        <i class="fa fa-cube text-primary me-2"></i>
                        <t t-esc="state.activeModel.description"/>
                        <span class="small text-muted ms-2">(<t t-esc="state.activeModel.model"/>)</span>
                    </h5>

                    <!-- Field Categories -->
                    <div class="accordion" id="modelFieldsAccordion">
                        <!-- Relations -->
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseRelations">
                                    <i class="fa fa-link me-2 text-info"></i> Relations 
                                    <span class="badge bg-info ms-2"><t t-esc="state.activeModel.relations.length"/></span>
                                </button>
                            </h2>
                            <div id="collapseRelations" class="accordion-collapse collapse show">
                                <div class="accordion-body p-0">
                                    <table class="table table-sm table-hover small m-0">
                                        <thead class="table-light">
                                            <tr><th>Field</th><th>Label</th><th>Type</th><th>Related Model</th></tr>
                                        </thead>
                                        <tbody>
                                            <t t-foreach="state.activeModel.relations" t-as="f" t-key="f.name">
                                                <tr class="cursor-pointer" t-on-click="() => this.selectModel(f.relation)">
                                                    <td class="font-monospace text-primary"><t t-esc="f.name"/></td>
                                                    <td><t t-esc="f.string"/></td>
                                                    <td><span class="badge bg-secondary"><t t-esc="f.type"/></span></td>
                                                    <td class="text-info"><i class="fa fa-external-link me-1"></i><t t-esc="f.relation"/></td>
                                                </tr>
                                            </t>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                        <!-- Basic Fields -->
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseBasic">
                                    <i class="fa fa-database me-2 text-success"></i> Basic Fields
                                    <span class="badge bg-success ms-2"><t t-esc="state.activeModel.basic_fields.length"/></span>
                                </button>
                            </h2>
                            <div id="collapseBasic" class="accordion-collapse collapse">
                                <div class="accordion-body p-0">
                                    <table class="table table-sm table-hover small m-0">
                                        <thead class="table-light">
                                            <tr><th>Field</th><th>Label</th><th>Type</th><th>Req</th><th>Store</th></tr>
                                        </thead>
                                        <tbody>
                                            <t t-foreach="state.activeModel.basic_fields" t-as="f" t-key="f.name">
                                                <tr>
                                                    <td class="font-monospace text-success"><t t-esc="f.name"/></td>
                                                    <td><t t-esc="f.string"/></td>
                                                    <td><span class="badge bg-secondary"><t t-esc="f.type"/></span></td>
                                                    <td><i t-if="f.required" class="fa fa-check text-danger"></i></td>
                                                    <td><i t-if="f.store" class="fa fa-check text-success"></i></td>
                                                </tr>
                                            </t>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                        <!-- Computed Fields -->
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseComputed">
                                    <i class="fa fa-magic me-2 text-warning"></i> Computed Fields
                                    <span class="badge bg-warning text-dark ms-2"><t t-esc="state.activeModel.computed_fields.length"/></span>
                                </button>
                            </h2>
                            <div id="collapseComputed" class="accordion-collapse collapse">
                                <div class="accordion-body p-0">
                                    <table class="table table-sm table-hover small m-0">
                                        <thead class="table-light">
                                            <tr><th>Field</th><th>Label</th><th>Type</th><th>Store</th></tr>
                                        </thead>
                                        <tbody>
                                            <t t-foreach="state.activeModel.computed_fields" t-as="f" t-key="f.name">
                                                <tr>
                                                    <td class="font-monospace text-warning"><t t-esc="f.name"/></td>
                                                    <td><t t-esc="f.string"/></td>
                                                    <td><span class="badge bg-secondary"><t t-esc="f.type"/></span></td>
                                                    <td><i t-if="f.store" class="fa fa-check text-success"></i><span t-else="" class="text-muted small">virtual</span></td>
                                                </tr>
                                            </t>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Empty State -->
                <div t-if="!state.activeModel and !state.loading and state.searchResults.length === 0" class="text-center text-muted mt-5">
                    <i class="fa fa-project-diagram fa-3x mb-3 text-light"></i>
                    <p>Search for a model to explore its fields.</p>
                    <div class="small mt-2">Try: <code>res.partner</code>, <code>account.move</code>, <code>product.product</code></div>
                </div>
            </div>
        </div>
    </t>

</templates>
