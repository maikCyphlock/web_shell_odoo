<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web_shell.ModelGraph" owl="1">
        <div class="ws-model-graph h-100 d-flex flex-column bg-white">
            
            <!-- Header / Search -->
            <div class="p-2 border-bottom bg-light d-flex align-items-center justify-content-between">
                <div class="d-flex align-items-center flex-grow-1">
                    <button t-if="state.activeModel or state.history.length > 0" 
                            class="btn btn-sm btn-outline-secondary me-2" 
                            t-on-click="goBack">
                        <i class="fa fa-arrow-left"></i>
                    </button>
                    
                    <div class="input-group input-group-sm" style="max-width: 300px;">
                        <span class="input-group-text bg-white border-end-0"><i class="fa fa-search text-muted"></i></span>
                        <input type="text" 
                               class="form-control border-start-0" 
                               placeholder="Search model (e.g. res.partner)..." 
                               t-model="state.searchQuery" 
                               t-ref="searchInput"
                               t-on-keydown="onSearchKeydown"/>
                    </div>
                </div>
                <div t-if="state.activeModel" class="text-end ms-2">
                    <span class="badge bg-primary"><t t-esc="state.activeModel.model"/></span>
                </div>
            </div>

            <!-- Content Area -->
            <div class="flex-grow-1 overflow-auto position-relative">
                <div t-if="state.loading" class="text-center mt-5">
                    <i class="fa fa-spinner fa-spin fa-2x text-primary mb-2"></i>
                </div>

                <!-- Search Results Overlay -->
                <div t-if="state.searchResults.length > 0" class="ws-search-results list-group shadow position-absolute w-100 z-index-1" style="max-height: 300px; overflow-y: auto;">
                    <t t-foreach="state.searchResults" t-as="res" t-key="res.id">
                        <button class="list-group-item list-group-item-action d-flex justify-content-between small"
                                t-on-click="() => this.selectModel(res.model)">
                            <span class="fw-bold"><t t-esc="res.model"/></span>
                            <span class="text-muted"><t t-esc="res.name"/></span>
                        </button>
                    </t>
                </div>

                <div t-if="state.error" class="alert alert-danger m-3">
                    <t t-esc="state.error"/>
                </div>

                <!-- ER Diagram View -->
                <div t-if="state.activeModel" class="p-4 d-flex flex-column align-items-center">
                    <h5 class="mb-4 text-center">
                        <t t-esc="state.activeModel.description"/>
                        <div class="small text-muted"><t t-esc="state.activeModel.model"/></div>
                    </h5>

                    <div class="d-flex flex-wrap justify-content-center gap-4 ws-er-container w-100">
                        <!-- Central Node -->
                        <div class="ws-er-node ws-er-node-central p-3 border rounded shadow bg-primary text-white text-center">
                             <i class="fa fa-cube mb-1"></i>
                             <div class="fw-bold"><t t-esc="state.activeModel.model"/></div>
                        </div>

                        <!-- Relation Nodes -->
                        <div class="w-100 d-flex flex-wrap justify-content-center gap-4 mt-5 pt-3 border-top position-relative">
                            <!-- Helper for centering lines if needed, but flex gap is simpler for now -->
                             <t t-foreach="state.activeModel.relations" t-as="rel" t-key="rel.name">
                                <div class="ws-er-relation d-flex flex-column align-items-center" 
                                     style="width: 200px;"
                                     t-on-click="() => this.selectModel(rel.relation)">
                                    
                                    <div class="ws-er-line mb-2 position-relative">
                                        <div class="ws-er-label small"><t t-esc="rel.type"/></div>
                                        <div class="ws-er-connector"></div>
                                    </div>

                                    <div class="ws-er-node-related p-2 border rounded shadow-sm bg-white text-center w-100">
                                        <div class="small fw-bold text-truncate"><t t-esc="rel.string"/></div>
                                        <div class="x-small text-muted text-truncate"><t t-esc="rel.relation"/></div>
                                        <div class="x-small text-info mt-1"><t t-esc="rel.name"/></div>
                                    </div>
                                </div>
                             </t>
                        </div>
                    </div>
                </div>

                <!-- Empty State -->
                <div t-if="!state.activeModel and !state.loading and state.searchResults.length === 0" class="text-center text-muted mt-5">
                    <i class="fa fa-project-diagram fa-3x mb-3 text-light"></i>
                    <p>Search for a model to explore its relationships.</p>
                    <div class="small mt-2">Try: <code>res.partner</code>, <code>account.move</code>, <code>product.product</code></div>
                </div>
            </div>
        </div>
    </t>

</templates>
